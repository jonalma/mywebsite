#divLargerImage
{
    display: none;
    width: 250px;
    height: 250px;
    margin-left: -125px;     /* Shift over half the width */
    margin-top:  -50px;      /* Shift up half the height */
    position: absolute;
    left: 50%;        /* Start with top left in the center */
    top: 50%;
    z-index: 99;
    
}

#divOverlay
{
    display: none;
    position: absolute;
    top: 0;
    left: 0;
    background-color: #CCC;
    opacity: 0.5;
    width: 100%;
    height: 100%;
    z-index: 90;
}
----------------------

function popUp(thisImg) {
    var $img = $(thisImg);
    var w = '140%'
    var h = 'auto'
    $('#divLargerImage').html($img.clone().width(w).height(h)).fadeIn();
    $('#divLargerImage').click(function() {
        $('#divLargerImage').fadeOut(function() {
            $('#divLargerImage').empty();
        });
    });
};